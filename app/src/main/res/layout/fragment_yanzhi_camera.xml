<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/yanzhi_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/picture_02"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="@dimen/face_item_img_size"
                    android:layout_height="@dimen/face_item_img_size"
                    android:src="@drawable/face_glasses"/>
                <TextView
                    android:id="@+id/face_glasses_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/face_item_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="未知"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="@dimen/face_item_img_size"
                    android:layout_height="@dimen/face_item_img_size"
                    android:src="@drawable/face_moustache"/>
                <TextView
                    android:id="@+id/face_moustache_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/face_item_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="未知"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="@dimen/face_item_img_size"
                    android:layout_height="@dimen/face_item_img_size"
                    android:src="@drawable/face_hat"/>
                <TextView
                    android:id="@+id/face_hat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/face_item_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="未知"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="@dimen/face_item_img_size"
                    android:layout_height="@dimen/face_item_img_size"
                    android:src="@drawable/face_makeup"/>
                <TextView
                    android:id="@+id/face_makeup_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/face_item_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="未知"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="@dimen/face_item_img_size"
                    android:layout_height="@dimen/face_item_img_size"
                    android:src="@drawable/face_gender"/>
                <TextView
                    android:id="@+id/face_gender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/face_item_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="未知"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="@dimen/face_item_img_size"
                    android:layout_height="@dimen/face_item_img_size"
                    android:src="@drawable/face_hairstyle"/>
                <TextView
                    android:id="@+id/face_hairstyle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/face_item_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="未知"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="@dimen/face_item_img_size"
                    android:layout_height="@dimen/face_item_img_size"
                    android:src="@drawable/face_fat"/>
                <TextView
                    android:id="@+id/face_fat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/face_item_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="未知"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="@dimen/face_item_img_size"
                    android:layout_height="@dimen/face_item_img_size"
                    android:src="@drawable/face_score"/>
                <TextView
                    android:id="@+id/face_score_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/face_item_img_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:paddingTop="5dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="未知"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/yanzhi_oneMoreButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cameraoneMore"
            android:background="@drawable/shape_post"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</ScrollView>