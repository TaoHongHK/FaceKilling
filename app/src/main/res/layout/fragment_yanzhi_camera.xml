<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/yz_surface_view_camera"
        android:layout_width="500dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/yz_iv_show_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/yz_take_pic_butt"
        android:layout_width="@dimen/camera_butt_size"
        android:layout_height="@dimen/camera_butt_size"
        android:background="@drawable/shape_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/yz_flip_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/flip_camera"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/yz_get_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/yz_upload_butt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="上传"
        android:visibility="gone"/>



</RelativeLayout>