<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cof_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cof_item_layout_headimage"
            android:layout_width="@dimen/cof_head_size"
            android:layout_height="@dimen/cof_head_size"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:id="@+id/cof_item_layout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/cof_item_layout_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#4CA2D8"
                android:gravity="left"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/cof_item_layout_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/cof_item_layout_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/cof_item_layout_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    />
                <Button
                    android:id="@+id/cof_item_layout_like"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/like"
                    android:layout_gravity="right"
                    />
                <Button
                    android:id="@+id/cof_item_layout_review"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/chat"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <ListView
                    android:id="@+id/review_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:fillViewport="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>